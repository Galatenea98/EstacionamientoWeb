@model Entidades.Comprobante

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Comprobante</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.FechaFinal)
        @Html.HiddenFor(model=>model.Monto)

        <div class="form-group">
            @Html.LabelFor(model => model.cod_ingreso.CodIngreso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.cod_ingreso.CodIngreso,
                                   new SelectList(ViewBag.Ingreso, "CodIngreso", "CodIngreso", "")
                                   ,"---Select---","")
                )
                @Html.ValidationMessageFor(model => model.cod_ingreso.CodIngreso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

